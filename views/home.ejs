<%- include('partials/header'); -%>

<section id="top-section">
    <div class="row">
        <div class= "col-lg-6" "top">
            <h1 class="big-heading">Welcome</h1>
            <h1 class="big-heading"> to journal</h1>
        
            <p class="small-heading"><%= homeStartingContent %></p>
        </div>
        
        <div class= "col-lg-6">
            <img class="image" src="/images/img1.jpeg" >
        </div>
    </div>
    
</section>


<% posts.forEach(function (post) { %>
    <h1> <%= post.title %> </h1>
    <p> <%= post.content.substring(0,100) + "..." %> 
        <a href="/posts/<%=post._id%>" >Read more</a> 
    </p> 
<% }) %> 




