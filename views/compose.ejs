<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="titleText" id="" />
  </div>

  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" name="composeText" rows="5"></textarea>
  </div>

  <button type="submit" class="btn btn-primary" name="publishButton">
    Publish
  </button>
</form>

<%- include('partials/footer'); -%>
